{
  "name": "postcss-fontify",
  "version": "1.0.0",
  "description": "PostCSS plugin for generating font-face declarations from font files in a directory.",
  "keywords": [
    "postcss",
    "css",
    "postcss-plugin",
    "postcss-font-face-generator"
  ],
  "scripts": {
    "test": "jest --coverage && eslint ."
  },
  "author": "Alexander Sedeke <alexander.sedeke@gmail.com>",
  "license": "MIT",
  "repository": "alexsedeke/postcss-fontify",
  "engines": {
    "node": ">=12.0.0"
  },
  "peerDependencies": {
    "postcss": "^8.3.0"
  },
  "devDependencies": {
    "clean-publish": "^4.1.1",
    "eslint": "^8.37.0",
    "eslint-plugin-jest": "^27.2.1",
    "jest": "^29.5.0",
    "postcss": "^8.4.21"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2017
    },
    "env": {
      "node": true,
      "es6": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:jest/recommended"
    ],
    "rules": {
      "jest/expect-expect": "off"
    }
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    }
  },
  "dependencies": {
    "glob": "^9.3.2"
  }
}
